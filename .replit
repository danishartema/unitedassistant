modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["freetype", "glibcLocales", "libxcrypt", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add fastapi uvicorn sqlalchemy asyncpg psycopg2-binary alembic pydantic-settings python-jose passlib bcrypt celery redis python-multipart email-validator pgvector reportlab python-docx && python main.py"
waitForPort = 8000

[[ports]]
localPort = 8000
externalPort = 80
